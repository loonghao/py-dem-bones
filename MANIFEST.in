include LICENSE.md
include README.md
include README_zh.md
include CHANGELOG.md
include 3RDPARTYLICENSES.md
include 3RDPARTYLICENSES_zh.md
include pyproject.toml
include CMakeLists.txt
include setup.py
include .cibuildwheel.toml

# Include Python source files
recursive-include src/py_dem_bones *.py

# Include C++ source files
recursive-include src/binding *.cpp *.h *.hpp

# Include Dem-Bones library
recursive-include extern/dem-bones *

# Include Eigen library
recursive-include extern/eigen *

# Include documentation and examples
recursive-include docs *.rst *.py *.md
recursive-include examples *.py

# Include CMake files
recursive-include cmake *

# Exclude build artifacts and IDE files
prune docs/_build
prune docs/_static
prune docs/_templates
prune tests/__pycache__
prune src/py_dem_bones/__pycache__
prune .github
prune .vscode
prune .idea
prune build
prune dist
prune *.egg-info
prune __pycache__
prune .pytest_cache
prune .coverage
prune htmlcov
